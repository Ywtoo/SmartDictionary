{
  "manifest_version": 3,
  "name": "SmartDictionary",
  "description": "A dictionary using IA",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.gemini.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}