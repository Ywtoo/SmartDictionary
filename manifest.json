{
  "manifest_version": 3,
  "name": "SmartDictionary",
  "description": "A dictionary using IA",
  "version": "0.1",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/style.css"
      ]
    }
  ]
}